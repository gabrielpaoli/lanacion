<div class="newsContainer">

  <div class="container principalMain ">

    {% for news in data.news %}

        {% if(news.show_as == 3) %}
          <div class="grid grid-cols-1 grid-row-1 sm:grid-cols-3 mr-10">
            {% include '@lanacion/paragraphs/news-list/3-news-75-25.html.twig' with {data: news.news} %}
          </div>
        {% endif %}

        {% if(news.show_as == 4) %}
          <div class="{{ news.css_classes }}">
            {% include '@lanacion/paragraphs/news-list/3-news-33.html.twig' with {data: news.news} %}
          </div>
        {% endif %}

    {% endfor %}
  </div>

  {% if(data.show_ads.0) %}
    <div class="adds">
      <div class="mockupAd text-black">
        <p>Espacio Cedido para la publicidad</p>
      </div>
    </div>
  {% endif %}

</div>
